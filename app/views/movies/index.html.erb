<h1>Movies#index</h1>

<%= link_to "New Movie", new_movie_path %>

<%# <ul> %>
<% @movies.each do |movie| %>
  <h2><%= movie.title %></h2>
  <p><%= movie.genre %></p>
  <p><%= movie.runtime %></p>
  <p><%= movie.release_date %></p>
  <p>
  <%= link_to "Edit", edit_movie_path(movie) %>
  <%= link_to "Delete", movie_path(movie),
                        method: :delete,
                        data: { confirm: "Are you sure?" } %>
  </p>
  <br/>
<% end %>
<%# </ul> %>